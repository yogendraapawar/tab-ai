{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "version": "1.0",
  "description": "A simple Chrome extension template built with React and Vite",
  "action": {
    "default_title": "Open Side Panel"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "tabGroups",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:*/*"
  ]
}
